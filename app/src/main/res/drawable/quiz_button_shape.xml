<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/quiz_corner_radius" />

            <gradient android:angle="270" android:endColor="#FCAF42" android:startColor="#F2BE74" android:type="linear" />
        </shape></item>
    <item android:state_focused="true"><shape android:shape="rectangle">
            <corners android:radius="3dip" />

            <stroke android:width="1dip" android:color="#c53e2b" />

            <solid android:color="#e0341e" />
        </shape></item>
    <item><shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">
            <corners android:radius="@dimen/quiz_corner_radius" />

            <gradient android:angle="270" android:endColor="#858384" android:startColor="#DBD7D8" android:type="linear" />
        </shape></item>

</selector>