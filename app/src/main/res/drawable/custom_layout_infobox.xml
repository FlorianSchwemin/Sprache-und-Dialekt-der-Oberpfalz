<?xml version="1.0" encoding="utf-8"?>
<!-- layout for the info box inside MapActivity -->

<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle" >

    <gradient
        android:endColor="#80363030"
        android:gradientRadius="350"
        android:startColor="#80554e4e"
        android:type="radial" />

    <stroke
        android:width="1dp"
        android:color="#e1e1e1" />

    <corners
        android:bottomRightRadius="0dp"
        android:radius="30dp"
        android:topRightRadius="0dp" />

</shape>