<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/start_buttons_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_vorschlag_philipp_klein"
    android:clickable="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".StartActivity" >

    <Button
        style="@style/start_activity_map_button"
        android:id="@+id/start_map_button"
        android:layout_centerInParent="true"
        android:background="@drawable/button_karte"
        android:scaleX="0.85"
        android:scaleY="0.85" />

    <Button
        android:id="@+id/start_quiz_button"
        style="@style/start_activity_buttons"
        android:layout_centerVertical="true"
        android:layout_marginLeft="35dp"
        android:layout_toRightOf="@id/start_map_button"
        android:background="@drawable/button_quiz"
        android:scaleX="0.85"
        android:scaleY="0.85" />

    <Button
        android:id="@+id/start_interview_button"
        style="@style/start_activity_buttons"
        android:layout_centerVertical="true"
        android:layout_marginRight="35dp"
        android:layout_toLeftOf="@id/start_map_button"
        android:background="@drawable/button_dialoge"
        android:scaleX="0.85"
        android:scaleY="0.85" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/start_map_button"
        android:layout_centerHorizontal="true"
        android:background="@drawable/title_app"
        android:contentDescription="@string/title_activity_map" />

</RelativeLayout>